<div class="courses">
  <%  @camps.each do |camp| %>
    <div class="course">
      <div class="course-preview" style="background-image: url(<%= camp.photos.attached? ? cl_image_path(camp.photos.first.key) : 'https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcTPQDYau3Hs4-xw1i8jVSUY4BlF4FLmg8lQqg&usqp=CAU'%>);">
      </div>
      <div class="course-info">
        <div class="progress-container">
          <div class="progress"></div>
          <span class="progress-text">
            6/9 <i class="fa-solid fa-user"></i> Volunteers
          </span>
        </div>
        <h2><%= camp.camp_name %></h2>
        <p>Camp Description</p>
        <p><%= camp.description.truncate(200) %></p>
        <button class="btn">Continue</button>
      </div>
    </div>
  <% end %>
</div>
