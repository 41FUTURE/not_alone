<div class="home-container">
  <%= render "banner" %>
  <div class="container">
    <div class="row">
      <div class="col-12 col-md-8">
        <div class="newsfeed mt-5">
          <div>
            <h2>Change a child's life today</h2>
            <p class='mb-5'>Read about what previous camps have accomplished.</p>
          </div>
          <% @past_camps.each do |camp| %>
            <%= link_to camp_path(camp), class:"text-decoration-none" do %>
              <%= render "newsfeed_post", camp: camp %>
            <% end %>
          <% end %>
        </div>
      </div>
      <div class="col-12 col-md-4" style="position: sticky;">
        <div>
          <div class="upcoming-camps mt-5">
            <h3>Upcoming Camps</h3>
            <% @future_camps.each do |camp| %>
              <%= render "upcoming_camps", camp: camp %>
            <% end %>
            <%# <%= link_to 'See More', camps_path, class:'btn btn-secondary float-end btn-sm' %>
          </div>
          <div class="donation-box">
            <h3>Donate To Help Children Recover From Trauma with OpSafe</h3>
            <a href="https://opsafeintl.com">
              <div class="donate-button"><i class="fa fa-credit-card"></i> Donate Now</div>
            </a>
          </div>
        </div>
      </div>
    </div>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
    <script src="https://raw.githubusercontent.com/jerryluk/jquery.autogrow/master/jquery.autogrow-min.js"></script>
  </div>
</div>
