<h1>Upcoming Camps</h1>
<% @upcoming_assignments.each do |assignment| %>
  <div class="courses-container">
    <div class="course">
      <div class="course-preview">
        <h2><%= assignment.camp.start_date.strftime('%b %d, %Y') %> <%= assignment.camp.end_date.strftime('%b %d, %Y') %></h2>
        <p><%= assignment.camp.address %></p>
        <%# <a href="#">View all volunteers </a> %>
      </div>
      <div class="course-info">
        <div class="progress-container" >
          <div class="progress">
            <div class="progress-bar <%= assignment.camp.required_number_volunteers <= assignment.camp.assignments.count - 1 ? 'bg-info': 'progress-bar-striped progress-bar-animated' %>" role="progressbar" aria-label="Animated striped example" aria-valuenow="<%= assignment.camp.assignments.count - 1 %>" aria-valuemin="0" aria-valuemax="<%= assignment.camp.required_number_volunteers %>" style="width: <%= ((assignment.camp.assignments.count - 1) * 10) %>%;"></div>
          </div>
          <span class="progress-text">
            <% if assignment.camp.assignments.count <= 0 %>
              <p>0</p>
            <% else %>
              <%= assignment.camp.assignments.count - 1 %>/<%= assignment.camp.required_number_volunteers %> <i class="fa-solid fa-user"></i> volunteers
            <% end %>
          </span>
        </div>
        <h6><%= assignment.camp.camp_name %></h6>
        <p><%= assignment.camp.description.truncate(100) %></p>
        <%= link_to "Continue", camp_path(assignment.camp), class: "btn" %>
      </div>
    </div>
  </div>
<% end %>
<h1>Previous Camps</h1>
<% @previous_assignments.each do |assignment| %>
  <div class="courses-container">
    <div class="course">
      <div class="course-preview">
        <h2><%= assignment.camp.start_date %> <%= assignment.camp.end_date %></h2>
        <p><%= assignment.camp.address %></p>
        <a href="#">View all volunteers </a>
      </div>
      <div class="course-info">
        <div class="progress-container">
          <div class="progress"></div>
          <span class="progress-text">
            <%=assignment.final_volunteer_count%>/<%= assignment.camp.required_number_volunteers %> <i class="fa-solid fa-user"></i> volunteers
          </span>
        </div>
        <h6><%= assignment.camp.camp_name %></h6>
        <p><%= assignment.camp.description.truncate(100) %></p>
        <%= link_to "Continue", camp_path(assignment.camp), class: "btn" %>      </div>
    </div>
  </div>
<% end %>
